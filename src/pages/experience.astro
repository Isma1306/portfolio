---
import experienceList from '../assets/experience.json'
import Container from '../components/Container.astro'
import ExpCard from '../components/ExpCard.astro'
import Layout from '../layouts/Layout.astro'
import PageTitle from '../components/PageTitle.astro'
---

<Layout title='Experience'>
  <Container>
    <PageTitle title='Experience' subtitle='Professional Journey' />
    {experienceList.map((exp, idx) => <ExpCard side={idx % 2 === 0 ? 'left' : 'right'} experience={exp} />)}
  </Container>
</Layout>
