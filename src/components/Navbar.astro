---
import Github from '../assets/github.svg'
import Linkedin from '../assets/linkedin.svg'
const links = [
  { name: 'home', href: '/' },
  { name: 'aboutMe', href: '/about' },
  { name: 'blog', href: '/blog' },
  { name: 'works', href: '/works' },
  { name: 'experience', href: '/experience' },
]
const url = Astro.routePattern
---

<nav>
  <ul>
    {
      links.map((link, idx) => (
        <li class:list={[link.href === url ? 'selected' : '', 'link']}>
          {link.href === url ? '/*' : '//'}0{idx}
          <a href={link.href}>{link.name}</a>
        </li>
      ))
    }
  </ul>
  <div class='right'>
    <a href='https://github.com/isma1306' aria-label='link to github page'><Github size='1rem' fill='currentColor' /></a>

    <a href='https://linkedin.com/in/ismaelcarrea' aria-label='link to linkedin page'> <Linkedin size='1rem' fill='currentColor' /></a>
    <label class='switch'>
      <input #darkmode type='checkbox' />
      <span> darkmode</span>
    </label>
  </div>
</nav>

<script>
  const darkmode = document.querySelector('input')
  darkmode?.addEventListener('change', (event: Event) => {
    const input = event.target as HTMLInputElement
    const html = document.querySelector('html')
    html!.style.setProperty('color-scheme', input.checked ? 'dark' : 'light')
  })
</script>
<style>
  nav {
    display: flex;
    justify-content: space-between;
    padding: 1rem;
  }
  ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin-left: 0;
    padding-left: 0;
  }
  .selected {
    color: var(--highlight);
    * {
      color: var(--highlight);
    }
  }
  .right {
    color: var(--highlight);
    display: flex;
    align-items: center;
    gap: 1rem;
    a {
      height: 1rem;
    }
    a:hover {
      color: var(--secondary);
    }
  }
</style>
