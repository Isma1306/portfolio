<style>
  .container {
    /* width: 100%;
    height: 100vh; */
    margin: auto;
    max-width: 900px;
    padding: 5px;
    padding: 1rem;
    gap: 1rem;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(6, 1fr);
  }
  .card {
    border-radius: 0.5rem;
    padding: 0.5rem;
    background-color: light-dark(var(--primary), var(--secondary));
    color: light-dark(var(--secondary), var(--primary));
    box-shadow: 0 2px 8px rgba(0, 0, 0, .33);
  }
  .info {
    grid-column: 1/3;
    grid-row: 1/4;
  }

  .experience {
    grid-column: 3/7;
    grid-row: 1/4;
  }

  .blog {
    grid-column: 1/4;
    grid-row: 4/6;
  }

  .work {
    grid-column: 4/7;
    grid-row: 4/6;
  }
</style>
